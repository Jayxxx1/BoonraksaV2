# --- Database ---
DATABASE_URL="postgresql://user:password@localhost:5432/boonraksa_db?schema=public"

# --- Server ---
PORT=8000
NODE_ENV=production
JWT_SECRET=generate_a_secure_random_string_at_least_32_chars

# --- Security ---
# Comma-separated list of origins, or * for all
CORS_ORIGIN="https://yourdomain.in.th,http://localhost:3000"

# --- NIPA Object Storage (S3-compatible) ---
S3_ENDPOINT="https://sth3.nipa.cloud"
S3_REGION="ap-southeast-1"
S3_ACCESS_KEY="your_access_key"
S3_SECRET_KEY="your_secret_key"
S3_BUCKET="boonraksa-storage"
S3_PUBLIC_URL="https://your-custom-cdn.com" # Optional
